generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type CartsItems {
  product  String @db.ObjectId
  price Int
  quantity Int
}

type ProductsSpecs {
  battery String
  camera  String
  chipset String
  os      String
  ram     String
  size    String
  storage String
}

model Carts {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  v          Int          @map("__v")
  items      CartsItems[]
  totalPrice Int?
  user       String       @db.ObjectId
  userId  String @unique @db.ObjectId
  createdAt  DateTime     @db.Date
  updatedAt  DateTime     @db.Date
}

model Products {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  brand       String
  description String
  images      String
  model       String
  new         Boolean?
  price       Int
  recommended Boolean?
  releaseDate String
  specs       ProductsSpecs
}

model Users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  v         Int      @map("__v")
  email     String   @unique
  password  String   @unique
  username  String   @unique
  cart Carts?
  createdAt DateTime @db.Date
  updatedAt DateTime @db.Date
}
